     function validation() {
  var x, text;

 
  x = document.getElementById("mnumber").value;
  var y = document.getElementById("pinnumber").value;
  var z = document.getElementById("eemail").value;

   var w = document.getElementById("uname").value;
   var s=  document.getElementById("lname").value;
 var k=document.getElementById("fname").value;
  
  if(x.match(document.getElementById("mnumber").pattern)) {
    text = "Input  valid";
       document.getElementById("demo").innerHTML = text;
     
  } else {
    text = "please enter 10 digits ";
       document.getElementById("demo").innerHTML = text;
     
  }
        if(y.match(document.getElementById("pinnumber").pattern)) {
    text = "Input  valid";
       document.getElementById("pin").innerHTML = text;
     
  } else {
    text = "please enter 6 digits ";
       document.getElementById("pin").innerHTML = text;
     
  }
         if(w.match(document.getElementById("uname").pattern)){
             text="valid input";
             document.getElementById("username").innerHTML=text;
         }
         else{
             text="please enter one upper, lowernumeric and symbol with min 8 charecters";
               document.getElementById("username").innerHTML=text;
         }
          if(s.match(document.getElementById("lname").pattern)){
             text="valid input";
             document.getElementById("lastname").innerHTML=text;
         }
         else{
             text="please enter min 2 and max 8 charecters with upper and lower";
               document.getElementById("lastname").innerHTML=text;
         }
         if(k.match(document.getElementById("fname").pattern)){
             text="valid input";
             document.getElementById("firstname").innerHTML=text;
         }
         else{
             text="enter 6 charecters with upper and lower";
               document.getElementById("firstname").innerHTML=text;
         }
       
    
    
       
     
   
        }
         
 
                 
</script>

